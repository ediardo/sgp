<% if @pedido.errors.full_messages.any? %>
<div id="error_explanation">
        <h2><%= pluralize(@pedido.errors.count, "error") %> evitaron que el registro se guardara:</h2>
        <ul>
          <% @pedido.errors.full_messages.each do |msg| %>
            <li> <%= msg %></li>
          <% end %>
        </ul>
</div>
<% end %>
<%= form_for @pedido, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :num_pedido, 'Numero de pedido', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :num_pedido, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :descripcion, 'DescripciÃ³n', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :descripcion, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cliente_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :cliente_id, @clientes, :id, :num_cliente, {:include_blank => "Seleccione un cliente"}%>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                pedidos_path, :class => 'btn' %>
  </div>
<% end %>
