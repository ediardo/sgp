<% if @cliente.errors.full_messages.any? %>
  <div id="error_explanation">
  <h2><%= pluralize(@cliente.errors.count, "error") %> evitaron que el registro se guardara:</h2>
  <ul>
  <% @cliente.errors.full_messages.each do |msg| %>
    <li> <%= msg %></li>
  <% end %>
  </ul>
</div>
<% end %>
<%= form_for @cliente, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :num_cliente, 'RFC', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :num_cliente, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :nombres, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nombres, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :apellidos, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :apellidos, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :telefono, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :telefono, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :direccion, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :direccion, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                clientes_path, :class => 'btn' %>
  </div>
<% end %>
