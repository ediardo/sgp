<h1>Listado de  clientes</h1>

<table>
  <thead>
    <tr>
      <th>Num cliente</th>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>Telefono</th>
      <th>Direccion</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.num_cliente %></td>
        <td><%= cliente.nombres %></td>
        <td><%= cliente.apellidos %></td>
        <td><%= cliente.telefono %></td>
        <td><%= cliente.direccion %></td>
        <td><%= cliente.email %></td>
        <td><%= link_to 'Mostrar', cliente %></td>
        <td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Destruir', cliente, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

